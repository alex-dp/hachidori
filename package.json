{
  "name": "hachidori",
  "productName": "Hachidori",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build-linux": "npm run compile-linux && npm run linux-add-script",
    "build-win": "electron-packager ./ Hachidori --platform=win32 --arch=x64 --overwrite",
    "compile-linux": "electron-packager ./ Hachidori --platform=linux --arch=x64 --overwrite",
    "linux-add-script": "echo './Hachidori --disable-gpu --enable-transparent-visuals' > Hachidori-linux-x64/Hachidori.sh && chmod +x Hachidori-linux-x64/Hachidori.sh"
  },
  "dependencies": {
    "electron-prebuilt": "~1.1.0"
  },
  "devDependencies": {
    "electron-prebuilt": "~1.1.3"
  }
}
